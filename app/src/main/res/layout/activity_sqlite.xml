<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/sqlite_bt1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="clickLis"
        android:text="创建数据库"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sqlite_bt2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="clickLis"
        android:text="更新数据库"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sqlite_bt1" />

    <Button
        android:id="@+id/sqlite_bt3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="clickLis"
        android:text="插入数据"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sqlite_bt2" />

    <Button
        android:id="@+id/sqlite_bt4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="clickLis"
        android:text="修改数据"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sqlite_bt3" />

    <Button
        android:id="@+id/sqlite_bt5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="clickLis"
        android:text="查询数据"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sqlite_bt4" />

    <Button
        android:id="@+id/sqlite_bt6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="clickLis"
        android:text="删除数据"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sqlite_bt5" />

    <Button
        android:id="@+id/sqlite_bt7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="clickLis"
        android:text="删除数据库"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sqlite_bt6" />

</androidx.constraintlayout.widget.ConstraintLayout>