<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/su_bt1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="clickLis"
            android:text="获取通讯录"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/su_bt2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="clickLis"
            android:text="打开网页"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/su_bt1" />

        <Button
            android:id="@+id/su_bt3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="clickLis"
            android:text="打开拨号界面"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/su_bt2" />

        <Button
            android:id="@+id/su_bt4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="clickLis"
            android:text="直接拨打电话"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/su_bt3" />

        <Button
            android:id="@+id/su_bt5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="clickLis"
            android:text="发送短信"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/su_bt4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>